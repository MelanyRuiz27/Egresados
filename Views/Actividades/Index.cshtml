@model IEnumerable<EgresadosU.Models.Actividades>

@{
    ViewBag.Title = "Index";
}





<h2>Actividades</h2>

@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Admin"))

    {
        <p>
            @Html.ActionLink("Crear", "Create")
        </p>
    }
}

          <table class="table table-hover table-striped">
   

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dirigido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensaje)
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Solicitante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dirigido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mensaje)
                </td>


                @if (Request.IsAuthenticated)

                {

                    if (User.IsInRole("Admin"))
                    {

                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                        </td>
                    }
                }

            </tr>

            @*<th>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </th>
                <th>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </th>
                <th>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </th>*@

        }

    </table>



