                @Html.TextBoxFor(m => m.Documento, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Documento, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group row">
            @Html.LabelFor(m => m.IdEstadoSexo, new { @class = "col-md-2 control-label" })
