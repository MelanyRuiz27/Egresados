@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" , @class = " btn btn-primary caret", @style="color:midnightblue" })
        </li>
        <li> 
        <a href="javascript:document.getElementById('logoutForm').submit()" class=" btn btn-primary" style="color:midnightblue"> Cerrar sesión</a></li>
    </ul>
    }
}
